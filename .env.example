# Sample environment variables for deployment
# Copy this to .env and fill in your values

# Required: Your ChatGPT session token
UNLIMITEDGPT_SESSION_TOKEN=your_session_token_here

# API Security: Set a strong API key to protect your endpoint
# If not set, the API will be open to everyone!
CHATGPT_API_KEY=your_secret_api_key_here

# Browser settings (these defaults work well with Docker/TigerVNC)
UNLIMITEDGPT_HEADLESS=false
CHATGPT_USE_STEALTH=true
CHATGPT_REAL_BROWSER=false
CHATGPT_IGNORE_AUTOMATION=true

# Optional: VNC/noVNC browser access in Docker
ENABLE_VNC=true
# Optional: Protect VNC with a password (recommended for internet-facing deployments)
# VNC_PASSWORD=change_me
# Optional: Internal VNC TCP port used by Xvnc (default: 5900)
# VNC_PORT=5900
# Optional: noVNC web port (default: 6080)
# NOVNC_PORT=6080
# Optional: API port for uvicorn (default: 8000)
# APP_PORT=8000
# Optional: X display/desktop size used by Xvnc
# DISPLAY_NUM=:99
# VNC_GEOMETRY=1920x1080
# VNC_DEPTH=24

# Optional: Custom base URL
# CHATGPT_BASE_URL=https://chatgpt.com

# Optional: Default timeout in seconds (default: 240)
# CHATGPT_DEFAULT_TIMEOUT=240
